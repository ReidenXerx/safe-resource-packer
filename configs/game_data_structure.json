{
  "description": "Game data folder structure detection - what actually matters for modding",
  "version": "1.0",
  
  "game_data_folders": {
    "description": "Standard game data folders that mods use - regardless of naming conventions",
    
    "meshes": {
      "description": "3D models and geometry files",
      "standard_names": ["meshes"],
      "file_extensions": [".nif", ".tri", ".hkx", ".kf", ".kfm", ".obj"],
      "priority": "high"
    },
    
    "textures": {
      "description": "Texture and material files", 
      "standard_names": ["textures", "materials"],
      "file_extensions": [".dds", ".tga", ".bmp", ".png", ".jpg", ".bgsm", ".bgem"],
      "priority": "high"
    },
    
    "sounds": {
      "description": "Audio files",
      "standard_names": ["sound", "music", "voice"],
      "file_extensions": [".wav", ".xwm", ".fuz", ".mp3", ".ogg"],
      "priority": "medium"
    },
    
    "scripts": {
      "description": "Game scripts",
      "standard_names": ["scripts"],
      "file_extensions": [".pex", ".psc"],
      "priority": "medium"
    },
    
    "interface": {
      "description": "UI and menu files",
      "standard_names": ["interface", "strings"],
      "file_extensions": [".swf", ".gfx", ".strings", ".dlstrings", ".ilstrings"],
      "priority": "low"
    },
    
    "animations": {
      "description": "Animation data",
      "standard_names": ["animationdata", "animations"],
      "file_extensions": [".hkt", ".xml"],
      "priority": "low"
    },
    
    "misc": {
      "description": "Other game data",
      "standard_names": ["misc", "lodsettings", "programs"],
      "file_extensions": [".txt", ".ini", ".json", ".xml"],
      "priority": "low"
    }
  },
  
  "detection_strategy": {
    "description": "How to detect what type of data we're dealing with",
    "method": "content_based",
    "rules": [
      "1. Look at file extensions first - most reliable indicator",
      "2. Check folder names as secondary indicator", 
      "3. Don't rely on mod naming conventions",
      "4. Focus on actual game data structure"
    ]
  },
  
  "game_specific_variations": {
    "skyrim": {
      "archive_format": "bsa",
      "special_folders": ["meshes/actors/character", "textures/actors/character"]
    },
    "fallout4": {
      "archive_format": "ba2", 
      "special_folders": ["meshes/actors/character", "materials"],
      "additional_extensions": {
        "materials": [".bgsm", ".bgem"]
      }
    },
    "fallout3": {
      "archive_format": "bsa",
      "legacy_format": true
    },
    "oblivion": {
      "archive_format": "bsa",
      "legacy_format": true
    }
  }
}
