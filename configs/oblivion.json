{
  "description": "Optimized configuration for The Elder Scrolls IV: Oblivion",
  "game": "oblivion",
  "version": "1.0",
  
  "plugin_extensions": [
    ".esp", ".esm"
  ],
  
  "asset_extensions": {
    "meshes": [
      ".nif", ".kf", ".kfm"
    ],
    "textures": [
      ".dds", ".tga", ".bmp"
    ],
    "audio": [
      ".wav", ".mp3"
    ],
    "data": [
      ".txt", ".ini"
    ],
    "other": [
      ".lip"
    ]
  },
  
  "folder_categories": {
    "meshes": [
      "meshes", "mesh"
    ],
    "textures": [
      "textures", "texture"
    ],
    "sounds": [
      "sound", "sounds", "music", "voice"
    ],
    "data": [
      "misc"
    ],
    "other": []
  },
  
  "package_naming": {
    "use_esp_name": true,
    "suffix": "_OB",
    "version": "v1.0",
    "separator": "_"
  },
  
  "processing": {
    "max_depth": 8,
    "min_assets": 1,
    "case_sensitive": false,
    "follow_symlinks": false,
    "skip_hidden": true
  },
  
  "game_specific": {
    "archive_format": "bsa",
    "compression_level": 5,
    "max_file_size": "2GB",
    "common_folders": [
      "meshes/characters",
      "meshes/armor",
      "meshes/weapons",
      "textures/characters",
      "textures/armor",
      "textures/weapons",
      "sound/voice/oblivion.esm"
    ]
  }
}
