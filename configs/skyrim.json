{
  "description": "Optimized configuration for The Elder Scrolls V: Skyrim",
  "game": "skyrim",
  "version": "1.0",
  
  "plugin_extensions": [
    ".esp", ".esm", ".esl"
  ],
  
  "asset_extensions": {
    "meshes": [
      ".nif", ".tri", ".hkx", ".kf", ".kfm"
    ],
    "textures": [
      ".dds", ".tga", ".bmp", ".png"
    ],
    "audio": [
      ".wav", ".xwm", ".fuz"
    ],
    "scripts": [
      ".pex", ".psc"
    ],
    "animation": [
      ".hkt", ".xml"
    ],
    "interface": [
      ".swf", ".gfx", ".menu", ".translation", ".strings", ".dlstrings", ".ilstrings"
    ],
    "data": [
      ".txt", ".ini", ".json", ".xml"
    ],
    "other": [
      ".seq", ".lip", ".facefx", ".facegendata"
    ]
  },
  
  "folder_categories": {
    "meshes": [
      "meshes", "mesh"
    ],
    "textures": [
      "textures", "texture"
    ],
    "sounds": [
      "sound", "sounds", "music", "voice"
    ],
    "scripts": [
      "scripts", "script", "source"
    ],
    "interface": [
      "interface", "strings"
    ],
    "animations": [
      "meshes", "animationdata"
    ],
    "data": [
      "misc", "lodsettings"
    ],
    "other": []
  },
  
  "package_naming": {
    "use_esp_name": true,
    "suffix": "_SE",
    "version": "v1.0",
    "separator": "_"
  },
  
  "processing": {
    "max_depth": 8,
    "min_assets": 1,
    "case_sensitive": false,
    "follow_symlinks": false,
    "skip_hidden": true
  },
  
  "game_specific": {
    "archive_format": "bsa",
    "compression_level": 5,
    "max_file_size": "2GB",
    "common_folders": [
      "meshes/actors/character",
      "meshes/armor",
      "meshes/weapons",
      "textures/actors/character",
      "textures/armor",
      "textures/weapons",
      "textures/landscape",
      "textures/architecture",
      "sound/voice/skyrim.esm",
      "scripts/source"
    ]
  }
}
