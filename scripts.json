{
  "scripts": {
    "build": "py build_release.py",
    "build:quick": "py -m build",
    "build:bundled": "py build_release.py --bundled-only",
    "build:clean": "py -c \"import shutil; shutil.rmtree('dist', ignore_errors=True); shutil.rmtree('build', ignore_errors=True); shutil.rmtree('release', ignore_errors=True)\"",
    "test": "py -m pytest tests/ -v",
    "test:quick": "py -m pytest tests/ -x",
    "install": "pip install -e .",
    "install:deps": "pip install -r requirements.txt",
    "lint": "python -m flake8 src/",
    "format": "python -m black src/",
    "run": "safe-resource-packer-ui",
    "run:cli": "safe-resource-packer",
    "dev": "python -m safe_resource_packer",
    "release:test": "twine check dist/*",
    "release:upload": "twine upload dist/*",
    "release:upload-test": "twine upload --repository testpypi dist/*"
  },
  "description": "npm-style scripts for Safe Resource Packer development",
  "version": "1.0.0"
}
